<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >

    <RelativeLayout
        android:id="@+id/layoutForMessage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/receiver_chat_drawable"
        android:layout_marginRight="50dp"
        >
        <TextView
            android:id="@+id/senderMessage_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Message Displays here Sender Message Displays here Sender Message Displays here "
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingLeft="7dp"
            android:paddingRight="4dp"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            />

        <TextView
            android:id="@+id/timeOfMessage_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@id/senderMessage_id"
            android:layout_marginLeft="40dp"
            android:layout_alignBottom="@+id/senderMessage_id"
            android:text="20:09"
            android:padding="7dp"
            android:textColor="#434343"/>




    </RelativeLayout>


</RelativeLayout>